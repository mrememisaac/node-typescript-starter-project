{
  "name": "node-typescript-starter-project",
  "version": "1.0.0",
  "description": "A starter template for a node typescript project",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "start": "npm run build && nodemon ./dist/index.js",
    "test": "nodemon --watch . --ext ts --exec \"mocha -r ts-node/register src/tests/**/*.spec.ts\"",
    "start:dev": "nodemon"
  },
  "keywords": [
    "node",
    "typescript",
    "starter"
  ],
  "author": "Emem Isaac",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "mongoose": "^5.8.1",
    "request": "^2.88.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/chai": "^4.2.7",
    "@types/chai-http": "^4.2.0",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.2",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.34",
    "@types/morgan": "^1.7.37",
    "@types/request": "^2.48.3",
    "@types/rimraf": "^2.0.3",
    "@types/supertest": "^2.0.8",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "debug": "^4.1.1",
    "mocha": "^6.2.2",
    "morgan": "^1.9.1",
    "nodemon": "^2.0.2",
    "rimraf": "^3.0.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  }
